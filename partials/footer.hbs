{{!-- Site footer --}}
<footer class="footer">
  <div class="container wrapper">
    <div class="grid">
      <div class="col-xs footer__top">
        {{!-- Blog logo or title --}}
        <a href="{{@blog.url}}">
          {{#if @blog.logo}}
            <img class="lazyload footer__logo" data-src="{{@blog.logo}}"
              alt="{{@blog.title}}"/>
          {{else}}
            <h3 class="footer-title">{{@blog.title}}</h3>
          {{/if}}
        </a>
        {{!-- Blog description --}}
        <p>{{@blog.description}}</p>
        <hr>
        {{!-- Social media links --}}
        {{>social-media}}
      </div>
    </div>
  </div>

  {{!-- Copyright --}}
  <div class="footer__bottom">
    <div class="copyright text-center">
      &copy; {{date format="YYYY"}} <a href="{{@blog.url}}">{{@blog.title}}</a>
    </div>
  </div>
</footer>
